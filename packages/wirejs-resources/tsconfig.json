{
	"compilerOptions": {
	  "module": "ESNext",
	  "target": "ESNext",
	  "moduleResolution": "node",
	  "outDir": "./dist",
	  "esModuleInterop": true,
	  "strict": true,
	  "skipLibCheck": true,
	  "declaration": true, 
	},
	"include": ["src/**/*"],       // Include all your source files
	"exclude": ["node_modules", "../../node_modules"]    // Exclude node_modules folder from compilation
  }